.well.well-sm
    .row
        .col-md-3           
            =image_tag(i.artwork, :class => "img-thumbnail img-responsive center-block")
        .col-md-9
            %h4=i.title
            %h4=i.artist
            %h5.small=i.year
            %h5.small=i.label
            %h6.small=i.date
            -if i.bnm == true           
                %a.btn.btn-danger.btn-sm{:href => i.url}=i.score
            -else
                -if i.bnr == true
                    %a.btn.btn-success.btn-sm{:href => i.url}=i.score
                -else
                    %a.btn.btn-primary.btn-sm{:href => i.url}=i.score
%h2
  = @list.title
  = link_to edit_list_path @list do
    %span.glyphicon.glyphicon-pencil
  = link_to 'Delete List', @list, method: :delete, data: { confirm: 'Are you sure?' } do
    %span.glyphicon.glyphicon-remove

%p
  %strong Category:
  = @list.category

%p
  %strong Author:
  = link_to @list.user.email, user_path(@list.user)

%nav.navbar.navbar-default.navbar-inverse.navbar-static-top
  .container
    .navbar-header
      = button_tag type: "button", class: ["navbar-toggle", "collapsed"], data: { toggle: "collapse", target: "#navbar-collapse-button" } do
        %span.sr-only
          Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to "Home", root_path, class: "navbar-brand"
    .collapse.navbar-collapse#navbar-collapse-button
      %ul.nav.navbar-nav.navbar-left
        %li= link_to "Albums", albums_path
        %li= link_to "Search", search_path
        %li.dropdown
          = link_to "#", class: "dropdown-toggle", data: {toggle: "dropdown"}, role: "button" do
            = precede "Top Albums" do
              %span.caret
          %ul.dropdown-menu{role: "menu"}
            %li= link_to "2010", albums_path(year: 2010, order: :score, dir: :desc)
            %li= link_to "2011", albums_path(year: 2011, order: :score, dir: :desc)
            %li= link_to "2012", albums_path(year: 2012, order: :score, dir: :desc)
            %li= link_to "2013", albums_path(year: 2013, order: :score, dir: :desc)
            %li= link_to "2014", albums_path(year: 2014, order: :score, dir: :desc)
            %li= link_to "2015", albums_path(year: 2015, order: :score, dir: :desc)
        %li= link_to "Interpol", albums_path(artist: "Interpol")
        %li= link_to "Julia Holter", albums_path(artist: "Julia Holter")
        %li= link_to "The Flaming Lips", albums_path(artist: "The Flaming Lips")
        %li= link_to "Various Artists", albums_path(artist: "Various Artists")

      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li= image_tag current_user.gravatar_url, size: "50"
          %li= link_to "Edit Profile", edit_user_registration_path
          %li= link_to "Log Out", destroy_user_session_path, method: "delete"
        - else
          %li= link_to "Log In", new_user_session_path
          %li= link_to "Sign Up", new_user_registration_path

%nav.navbar.navbar-default.navbar-inverse.navbar-static-top
  .container
    .navbar-header
      = button_tag type: "button", class: ["navbar-toggle", "collapsed"], data: { toggle: "collapse", target: "#navbar-collapse-button" } do
        %span.sr-only
          Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to "Home", root_path, class: "navbar-brand"
    .collapse.navbar-collapse#navbar-collapse-button
      %ul.nav.navbar-nav.navbar-left
        %li= link_to "Albums", albums_path
        %li= link_to "Dash", dash_path
        %li.dropdown
          = link_to "#", class: "dropdown-toggle", data: {toggle: "dropdown"}, role: "button" do
            = precede "Top Albums" do
              %span.caret
          %ul.dropdown-menu{role: "menu"}
            %li= link_to "2010", top_path(2010)
            %li= link_to "2011", top_path(2011)
            %li= link_to "2012", top_path(2012)
            %li= link_to "2013", top_path(2013)
            %li= link_to "2014", top_path(2014)
            %li= link_to "2015", top_path(2015)
        %li= link_to "Interpol", dash_path(artist: "Interpol")
        %li= link_to "Julia Holter", dash_path(artist: "Julia Holter")
        %li= link_to "The Flaming Lips", dash_path(artist: "The Flaming Lips")
        %li= link_to "Various Artists", dash_path(artist: "Various Artists")

      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li= link_to "Edit Profile", edit_user_registration_path
          %li= link_to "Log Out", destroy_user_session_path, method: "delete"
        - else
          %li= link_to "Log In", new_user_session_path
          %li= link_to "Sign Up", new_user_registration_path

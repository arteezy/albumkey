.well.well-sm
  .row.card
    .col-lg-3.col-md-4.col-sm-6.col-xs-12
      = image_tag(review_card["artwork"], class: ["artwork", "img-thumbnail", "img-responsive", "center-block"])
    .col-lg-4.col-md-4.col-sm-6.col-xs-12
      %h3= review_card["title"]
      %h4= link_to review_card["artist"], dash_path(artist: review_card["artist"])
      %h5= link_to review_card["year"], dash_path(year: review_card["year"])
      %h5= link_to review_card["label"], dash_path(label: review_card["label"])
      %h6= review_card["date"]
      %h6= link_to "Read review at Pitchfork", review_card["url"]
      .hidden-lg.hidden-md.hidden-sm
        - if review_card["bnm"]
          .btn.btn-lg.btn-danger= review_card["score"]
        - else
          - if review_card["bnr"]
            .btn.btn-lg.btn-success= review_card["score"]
          - else
            .btn.btn-lg.btn-primary= review_card["score"]
    .col-lg-2
      - unless review_card.rates.blank?
        .score= review_card.rates.where(user_id: current_user.id).first["rate"]
      = form_tag rate_path(review_card) do
        = number_field(nil, :rate, in: 0.0..10.0, step: 0.1, value: 7.5)
        = submit_tag("Rate")
    .col-lg-3.col-md-4.col-sm-6.hidden-xs
      - if review_card["bnm"]
        .score.bnm= review_card["score"]
      - else
        - if review_card["bnr"]
          .score.bnr= review_card["score"]
        - else
          .score= review_card["score"]

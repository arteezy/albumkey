- content_for :title do
  = params[:id]

= form_tag dash_path, method: :get, id: 'filter' do
  = label_tag 'Artist:'
  = text_field_tag :artist, params[:artist]
  = label_tag 'Year:'
  = text_field_tag :year, params[:year]
  = label_tag 'Label:'
  = text_field_tag :label, params[:label]
  = label_tag 'Order by:'
  = select_tag :order, options_for_select({ date: 'Date', artist: 'Artist', year: 'Year', score: 'Score' }.invert, params[:order])
  = label_tag 'Direction:'
  = select_tag :dir, options_for_select({ desc: 'DESC', asc: 'ASC' }.invert, params[:dir])
  %button.btn.btn-primary= 'Search'

= render partial: 'shared/review_card', collection: @albums

= paginate @albums

- title 'Users'

.col-xs-12
  .row
    .col-xs-12
      %h3<
        Users
      .table-responsive
        %table.table.table-striped.table-bordered.table-hover.table-condensed
          %thead
            %tr
              %th= 'Avatar'
              %th= 'Username'
              %th= 'Email'
              %th= 'Registration date'
              %th= 'Sign in count'
              %th= 'Role'
              %th= 'Action'
          %tbody.text-center
            - @users.each do |user|
              - if user.admin?
                %tr.info= render user
              - else
                %tr= render user
